local function checkfail(funcstr)
    local status, res = pcall(DBG_.loadstring(funcstr))
    if (status) then
        print('ERROR: '..funcstr.." DIDN'T fail")
    else
        print('SUCCESS: '..funcstr.." failed: "..res)
    end
end

